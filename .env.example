# Zabbix Monitor environment template
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://zabbix:secret123@db:5432/zabbix_monitor

# Zabbix API
ZABBIX_URL=http://zabbix-web:8080/api_jsonrpc.php
ZABBIX_USER=Admin
ZABBIX_PASSWORD=zabbix

# Telegram notifications (optional)
# Get bot token from @BotFather: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=

# Get chat_id: add bot to chat, send message, then run:
# curl "https://api.telegram.org/bot<YOUR_TOKEN>/getUpdates" | jq '.result[].message.chat.id'
TELEGRAM_CHAT_IDS=

# Message format: short (default) or detailed
TELEGRAM_MESSAGE_FORMAT=short

# Base URL for dashboard links in Telegram messages (optional)
APP_BASE_URL=http://localhost:5000
